<Window x:Class="MyProject.Feedback"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отправить отзыв" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <ListView x:Name="FeedbackList" Grid.Row="0" Margin="0,0,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Имя клиента" DisplayMemberBinding="{Binding ClientName}" Width="150"/>
                    <GridViewColumn Header="Оценка" DisplayMemberBinding="{Binding Rating}" Width="100"/>
                    <GridViewColumn Header="Комментарий" DisplayMemberBinding="{Binding Comments}" Width="400"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0">

            <TextBlock Text="Имя клиента:" Margin="0,0,0,5"/>
            <TextBox x:Name="ClientNameTextBox" Width="200"/>

            <TextBlock Text="Оценка (1-5):" Margin="0,10,0,0"/>
            <ComboBox x:Name="RatingComboBox" Width="100">
                <ComboBoxItem Content="1" />
                <ComboBoxItem Content="2" />
                <ComboBoxItem Content="3" />
                <ComboBoxItem Content="4" />
                <ComboBoxItem Content="5" />
            </ComboBox>

            <TextBlock Text="Комментарий:" Margin="0,10,0,0"/>
            <TextBox x:Name="CommentTextBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

            <Button Content="Оставить отзыв" Width="150" Margin="0,0,0,25" Click="SubmitFeedback_Click"/>
            <Button Content="Выход" Width="200" Height="50" Background="#840B29" Foreground="#fff" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="Back_click"/>

        </StackPanel>
    </Grid>
</Window>
