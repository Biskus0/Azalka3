<Window x:Class="MyProject.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="600" Width="800">
    <Grid Background="#76B8AD">
        <TextBlock Text="Вход в систему" FontSize="20" FontWeight="Bold" Foreground="#fff" HorizontalAlignment="Center" Margin="0,30,0,0"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Логин" Foreground="#fff" Margin="0,0,0,-5"/>
            <TextBox x:Name="userNameBox" Width="400" Height="40" Margin="0,10,0,20" Padding="5,0,0,0" Background="#747474" Foreground="#fff" VerticalContentAlignment="Center"/>

            <TextBlock Text="Пароль" Foreground="#fff" Margin="0,0,0,-5"/>
            <PasswordBox x:Name="passwordBox" Width="400" Height="40" Margin="0,10,0,10" Padding="5,0,0,0" Background="#747474" Foreground="#fff" VerticalContentAlignment="Center"/>

            <Button Content="Войти" Width="300" Height="50" Background="#B8451B" Foreground="#fff" HorizontalAlignment="Center" Click="BtnLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
