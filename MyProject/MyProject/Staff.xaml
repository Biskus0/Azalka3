<Window x:Class="MyProject.Staff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Персонал" Height="600" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" FontWeight="Bold">Информация о персонале</TextBlock>
            <Button Grid.Column="1" Content="Выход" Width="100" Height="40" Background="#840B29" Foreground="#fff" VerticalAlignment="Top" Margin="10" Click="Back_click"/>
        </Grid>

        <ListBox Name="StaffList" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,70,10,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Margin="5" Padding="10" CornerRadius="10">
                        <StackPanel>
                            <TextBlock Text="{Binding StaffName}" FontSize="18" FontWeight="Bold" />
                            <TextBlock Text="{Binding StaffRole}" FontSize="16" />
                            <TextBlock Text="{Binding StaffSalary, StringFormat='Зарплата: {0:N2} ₽'}" FontSize="16" />
                            <TextBlock Text="{Binding StaffPhone}" FontSize="16" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
