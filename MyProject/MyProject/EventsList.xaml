<Window x:Class="MyProject.EventsList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список мероприятий" Height="600" Width="800">
    <Grid>
        <DataGrid x:Name="EventsDataGrid" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding EventID}" Width="Auto"/>
                <DataGridTextColumn Header="Название" Binding="{Binding EventName}" Width="*"/>
                <DataGridTextColumn Header="Дата мероприятия" Binding="{Binding EventDate, StringFormat='yyyy-MM-dd'}" Width="*"/>
                <DataGridTextColumn Header="Зал" Binding="{Binding LocationName}" Width="*"/>
                <DataGridTextColumn Header="Адрес локации" Binding="{Binding LocationAddress}" Width="*"/>
                <DataGridTextColumn Header="Услуги" Binding="{Binding Services}" Width="*"/>
                <DataGridTextColumn Header="Персонал" Binding="{Binding Staff}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
