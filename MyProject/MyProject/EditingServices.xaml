<Window x:Class="MyProject.EditingServices"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование услуг" Height="600" Width="800">
    <Grid>
        <!-- Заголовок -->
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" Margin="10">Редактирование услуг</TextBlock>

        <!-- Список услуг -->
        <ListBox Name="ServicesList" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,50,10,150" SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <!-- Карточка услуги -->
                    <Border BorderBrush="Black" BorderThickness="1" Margin="5" Padding="10" CornerRadius="10">
                        <StackPanel>
                            <TextBlock Text="{Binding ServiceName}" FontSize="18" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Description}" FontSize="16"/>
                            <TextBlock Text="{Binding Price, StringFormat='Цена: {0:N2} ₽'}" FontSize="16"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Кнопки управления -->
        <Button Content="Добавить услугу" Width="150" Height="40" Background="#4CAF50" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Click="AddService_Click"/>
        <Button Content="Удалить услугу" Width="150" Height="40" Background="#F44336" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="DeleteService_Click"/>

        <!-- Контейнер для ввода данных услуги -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10,0,10,80">
            <Label Content="Название услуги" FontSize="16"/>
            <TextBox Name="ServiceNameTextBox" Width="250" Height="30" Margin="5"/>

            <Label Content="Описание услуги" FontSize="16"/>
            <TextBox Name="DescriptionTextBox" Width="250" Height="60" Margin="5" AcceptsReturn="True"/>

            <Label Content="Цена услуги (в рублях)" FontSize="16"/>
            <TextBox Name="PriceTextBox" Width="250" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
