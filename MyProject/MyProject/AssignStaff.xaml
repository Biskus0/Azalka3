<Window x:Class="MyProject.AssignStaff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Назначение персонала" Height="400" Width="600">
    <Grid>
        <Label Content="Выберите мероприятие:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <ComboBox Name="EventComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="10,40,0,0"/>

        <Label Content="Выберите персонал:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0"/>
        <ComboBox Name="StaffComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="10,110,0,0"/>

        <Button Name="AssignButton" Content="Назначить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,150,0,0" Click="AssignButton_Click"/>
        <Button Content="Выход" Width="200" Height="50" Background="#840B29" Foreground="#fff" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Click="Back_click"/>

    </Grid>
</Window>
