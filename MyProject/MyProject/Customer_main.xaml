<Window x:Class="MyProject.Customer_main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главная страница" Height="600" Width="800">
    <Grid Background="#76B8AD">
        <TextBlock Text="Главная страница (Заказчик)" FontSize="20" FontWeight="Bold" Foreground="#fff" HorizontalAlignment="Center" Margin="0,30,0,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,-300,0,0">
            <Button Content="Список мероприятий" Width="180" Height="50" Margin="20" Background="#37894D" Foreground="#fff" Click="EventsList_click"/>
            <Button Content="Услуги" Width="180" Height="50" Margin="20" Background="#37894D" Foreground="#fff" Click="ServicesList_click"/>
            <Button Content="Оформить мероприятие" Width="180" Height="50" Margin="20" Background="#37894D" Foreground="#fff" Click="CreateEvent_click"/>
        </StackPanel>

        <Button Content="Отправить отзыв" Width="180" Height="50" Background="#37894D" Foreground="#fff" HorizontalAlignment="Center" Margin="0,-150,0,0"/>

        <Button Content="Выход" Width="200" Height="50" Background="#840B29" Foreground="#fff" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="Logout_click"/>
    </Grid>
</Window>
