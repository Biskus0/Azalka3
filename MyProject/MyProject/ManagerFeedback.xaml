<Window x:Class="MyProject.ManagerFeedback"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отзывы" Height="600" Width="800">

    <Grid>
        <DataGrid Name="FeedbackDataGrid" AutoGenerateColumns="True" Margin="10" />

        <Button Content="Выход" Width="200" Height="50" Background="#840B29" Foreground="#fff" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="Back_click"/>

        <StackPanel VerticalAlignment="Bottom" Margin="0, 0, 0,200">
            <TextBlock Text="Введите ID отзыва для удаления:" HorizontalAlignment="Center" FontSize="14" Margin="0, 20, 0, 10"/>

            <TextBox Name="FeedbackIDTextBox" Width="200" Height="30" HorizontalAlignment="Center" Margin="0, 0, 0, 10"/>

            <Button Content="Удалить отзыв" Width="200" Height="50" Background="#4CAF50" Foreground="#fff" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="DeleteFeedback_Click"/>
        </StackPanel>
    </Grid>
</Window>
